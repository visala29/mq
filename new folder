pipeline {
    agent any
    
    stages {
        stage('Create Folder on C Drive') {
            steps {
                script {
                    def folderPath = "C:\\Path\\To\\Your\\Folder"
                    
                    // Create the folder using bat command
                    bat "mkdir \"${folderPath}\""
                    
                    // Verify if the folder was created
                    if (fileExists(folderPath)) {
                        echo "Folder created successfully at ${folderPath}"
                    } else {
                        error "Failed to create folder at ${folderPath}"
                    }
                }
            }
        }
    }
}
